pipeline{
    agent any
    environment {
        projet = "Test"

    }
    stages {
        stage('build'){
            steps{
                sh "sh untilloop.sh"
            }
        }
        stage('Array'){
            steps{
                sh "sh array"
            }
        }
    }
    post {
        success {
            echo "Success"
            sh 'mail -s "Success" timalsinasrijana77@gmail.com'
        }
        failure {
            echo "Failure"
            sh 'mail -s "Failed" timalsinasrijana77@gmail.com'

        }
        always {
            deleteDir()
        }
    }
}








     