pipeline{
    agent {
        label 'Agent1'
    }
    environment {
        project = "Test"

    }
    stages {
        stage('build'){
            steps{
                sh "sh untilloop.sh"

            }

        }
        stage('Array'){
            steps{
                sh "sh array"
            }
        }
    }
    post {
        success {
            echo "Success"
            sh 'mail -s "success" meliverpool36@gmail.com'


        }
        failure {
            echo "Failed"
            sh 'mail -s "Failed" meliverpool36@gmail.com'
        }
        always {
            deleteDir()
        }
    }
}